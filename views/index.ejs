<body>
  <h1>TODO List</h1>

  <main class="home">
    <header class="search">
      <form action="/">
        <input type="text" placeholder="Add to your list" name="search">
        <button type="submit"><i class="fa fa-search"></i></button>
      </form>
    </header>
    <section class="menu">
      <div class="grid">
        <div class="row1">
          <a href="#">
            <div class="box books">Books</div>
          </a>
          <a href="#">
            <div class="box films">Films</div>
          </a>
        </div>
        <div class="row2">
          <a href="#">
            <div class="box rest">Restaurants</div>
          </a>
          <a href="#">
            <div class="box prod">Products</div>
          </a>
        </div>
      </div>
    </section>
  </main>

  <main class="books">
    <h2>Books</h1>
      <form action="/">
        <input type="checkbox">
        <label for="books"> Title 1</label>
        <span>Date</span>
        <i class="far fa-star"></i>
        <br>

        <input type="checkbox">
        <label for="books"> Title 2</label>
        <span>Date</span>
        <i class="far fa-star"></i>
        <br>
        <input type="submit" value="Edit">
      </form>

      <h2>Completed Books</h1>

        <form action="/">
          <label for="books"> Title 1</label>
          <span>Date</span>
          <br>
          <label for="books"> Title 2</label>
          <span>Date</span>
          <br>
          <input type="submit" value="Edit">
        </form>
  </main>

  <main class="userpage">
    <div class="profile">
      <i class="fas fa-smile fa-5x"></i>
    </div>
    <div>
      <div><span>Name: </span>Bob Joe</div>
      <div><span>Email: </span>lighthouselabs@gmail.com</div>
    </div>
  </main>


  <footer>
    <div class="icons">
      <i class="fas fa-plus-circle fa-2x"></i>
      <i class="fas fa-home fa-2x"></i>
      <i class="fas fa-user fa-2x"></i>
    </div>
  </footer>

</body>
</html>
