      <div class="counter">9 books</div>




      <section class="all-items">


        <table>
          <thead>
              <tr>
                  <th><input type="checkbox" id="vehicle1" name="vehicle1" value="Bike"></th>
                  <th>Book</th>
                  <th>Author</th>
                  <th>Jan 1 2020</th>
              </tr>
          </thead>
          <tbody>
              <tr>
                  <td>Stationary</td>
                  <td>2,000</td>
              </tr>
              <tr>
                  <td>Furniture</td>
                  <td>10,000</td>
              </tr>
          </tbody>
          <tfoot>
              <tr>
                  <th>Total</th>
                  <td>12,000</td>
              </tr>
          </tfoot>
      </table>


        <article class="item">
          <h3>Name of Book</h1>
            <small>Added: Mar 2</small>
        </article>

        <article class="item">
          <h3>Name of Book2</h1>
            <small>Added: Mar 2</small>
        </article>
        <article class="item">
          <h3>Name of Book3</h1>
            <small>Added: Mar 2</small>
        </article>
      </section>

    </article>

    <!-- List 2 -->

    <div class="eating card">
      <h2>Eat</h2>
      <div class="counter">25 restaurants</div>
    </div>

    <!-- List 3 -->
    <div class="watching card">
      <h2>Watch</h2>
      <div class="counter">19 shows & movies</div>
    </div>

    <!-- List 4 -->

    <div class="buying card">
      <h2>Buy</h2>
      <div class="counter">3 products</div>
    </div>
  </main>

  <!-- Footer -->

  <footer>
    <div class="icon-cont">
      <i class="uil uil-plus"></i>
    </div>
  </footer>


</body>

</html>
